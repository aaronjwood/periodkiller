<Window x:Class="PeriodKiller.Windows.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="150" Width="200" WindowStyle="None" Title="About" ResizeMode="NoResize" AllowsTransparency="True" BorderThickness="1" BorderBrush="#FF003030">
    <StackPanel>
        <TextBlock TextWrapping="Wrap" Text="Period Killer 3.5.3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock TextWrapping="Wrap" Text="A free and open source directory and filename cleaning tool written with simplicity, speed, and efficiency in mind." VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2,5,2,0" FontSize="11"/>
        <TextBlock Margin="0,10,0,0" HorizontalAlignment="Center" FontSize="10">
            <Hyperlink NavigateUri="http://aaronjwood.com/tools/period-killer/" RequestNavigate="Hyperlink_AJW">
                aaronjwood.com/tools/period-killer/
            </Hyperlink>
        </TextBlock>
        <Button Width="50" Margin="0,15,0,0" Content="OK" Click="Close_Button_Click"/>
    </StackPanel>

</Window>
